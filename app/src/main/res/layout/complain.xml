<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="18dp"
        app:contentPaddingTop="5dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/post"
                android:layout_width="120dp"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/download" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="89dp"
                android:layout_toStartOf="@id/post"

                android:maxLines="2"
                android:text="This is a test message" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/message"
                android:text="Krishna "
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/location" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/location"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-29dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/location" />

            <TextView

                android:id="@+id/location"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="0dp"
                android:text="Jalandhar"
                android:textColor="#528106"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_above="@+id/message"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="-34dp"
                android:text="Open"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="#f00000" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>